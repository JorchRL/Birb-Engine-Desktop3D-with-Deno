  "version": "0.2.0",
  "configurations": [

    
    {  
      "console": "integratedTerminal",
      "request": "launch",
      "name": "Debug Deno App",
      "type": "node",
      "program": "${workspaceFolder}/index.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-brk",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}