{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "es2016",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "tasks": {
    "dev:watch": "deno run -A ./build.js",
    "dev:start": "deno run -A ./build.js & deno run -A --unstable ./lib/main.ts",
    "start": "deno run -A --unstable /lib/main.ts",
    "server": "deno run -A --watch --unstable /lib/server/server.ts"
  },
  "importMap": "./import_map.json"
}
